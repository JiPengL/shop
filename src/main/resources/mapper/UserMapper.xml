<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ixuxie.mappper.UserMapper">
    <resultMap id="BaseResultMap" type="com.ixuxie.entity.User">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="gender" jdbcType="INTEGER" property="gender"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="eamil" jdbcType="VARCHAR" property="eamil"/>
        <result column="birthday" jdbcType="VARCHAR" property="birthday"/>
        <result column="safety_level" jdbcType="INTEGER" property="safetyLevel"/>
        <result column="avatar_url" jdbcType="VARCHAR" property="avatarUrl"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="invite_code" jdbcType="VARCHAR" property="inviteCode"/>
        <result column="create_at" jdbcType="TIMESTAMP" property="createAt"/>
        <result column="update_at" jdbcType="TIMESTAMP" property="updateAt"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, name,pwd, gender, phone, eamil, birthday, safety_level, avatar_url, status, create_at, update_at ,invite_code
  </sql>


    <update id="changeState">
        update sh_user set status = #{status} where id = #{uid}
    </update>

</mapper>